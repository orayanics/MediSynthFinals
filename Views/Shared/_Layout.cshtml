@using MediSynthFinals.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UserCredentials> SignInManager
@inject UserManager<UserCredentials> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediSynthFinals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navFooter.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediSynthFinals.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #272727;">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" style="width: 95px;margin-left: 5%;"><img src="../imgs/logo.png" alt="logo" height="100%" width="100%"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav" style="padding-right: 50px">
                    <ul class="navbar-nav ms-auto">
                        <!-- Push content to the right -->
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a id="manage" class="nav-link" title="Manage" style="font-weight: bold; font-size: 12px;">Hello @UserManager.GetUserName(User)!</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index">
                                    <button id="logout" type="submit" class="nav-link" style="font-weight: bold; font-size: 12px;  text-decoration: none;">PORTAL

                                    </button>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Logout">
                                    <button id="logout" type="submit" class="nav-link" style="font-weight: bold; font-size: 12px;  text-decoration: none;">LOGOUT</button>
                                </a>
                            </li>
                        }
                        else
                        {

                            <!-- Adjusting right padding -->
                            <li class="nav-item">
                                <a class="nav-link" style="font-weight: bold; font-size: 12px;" asp-controller="User" asp-action="Login"></a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="Login" class="nav-link" class="nav-link" style="font-weight: bold; font-size: 12px;">
                                    LOGIN
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="font-weight: bold; font-size: 12px;" asp-controller="User" asp-action="Patient">REGISTER</a>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>

  @*       <partial name="_LoginPartial" />
 *@



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <img src="../imgs/logo.png" alt="logo" height="50" width="150" style="margin-bottom: 10px">
        
        <p class="text1">Hospital Name</p>
        <p class="text1">Contact Support</p>
        <p class="text1">&copy;Group5-3ITE</p>
        <h6 class="name">Karl Barce-Yna Del Rosario-Draico Gallardo-Jakob Palomo-Nicole Oraya</h6>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
