@model MediSynthFinals.Models.PatientCredentials
<head>
    <link rel="stylesheet" type="text/css" href="../css/form.css">
</head>

<body>
    <form method="post" asp-action="Edit" class="form">
        <p class="form-title"><img alt="MediSynth" src="../imgs/logo.png" width="120" height="40"></p>
        <p class="patient-info">Patient Reference No.</p>
        <div class="center">
            <p class="patient-ID">@Model.patientRef.Substring(0,7)</p>
        </div>
        <p class="patient-info">Patient Name</p>
        <div class="center">
            <p class="patient-ID">@Model.fName @Model.lName</p>
        </div>
        <p class="form-title">Medical History</p>
        @*      <div class="input-container">
        <label asp-for="Id" class="form-label">Id</label>
        <input asp-for="Id" class="form-control" value="@ViewBag.increment" placeholder="@ViewBag.increment">
        </div> *@

        <div class="input-container">
            <label asp-for="fName" class="form-label"></label>
            <input asp-for="fName" class="form-control">
            <span asp-validation-for="fName" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="lName" class="form-label"></label>
            <input asp-for="lName" class="form-control">
            <span asp-validation-for="lName" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="address" class="form-label"></label>
            <input asp-for="address" class="form-control">
            <span asp-validation-for="address" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="region" class="form-label"></label>
            <input asp-for="region" class="form-control">
            <span asp-validation-for="region" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="city" class="form-label"></label>
            <input asp-for="city" class="form-control">
            <span asp-validation-for="city" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="gender" class="form-label"></label>
            <input asp-for="gender" class="form-control">
            <span asp-validation-for="gender" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="birthdate" class="form-label"></label>
            <input asp-for="birthdate" type="date" class="form-control">
            <span asp-validation-for="birthdate" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="birthplace" class="form-label"></label>
            <input asp-for="birthplace" class="form-control">
            <span asp-validation-for="birthplace" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="contactNum" class="form-label"></label>
            <input asp-for="contactNum" class="form-control">
            <span asp-validation-for="contactNum" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="occupation" class="form-label"></label>
            <input asp-for="occupation" class="form-control">
            <span asp-validation-for="occupation" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="religion" class="form-label"></label>
            <input asp-for="religion" class="form-control">
            <span asp-validation-for="religion" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="emergencyName" class="form-label"></label>
            <input asp-for="emergencyName" class="form-control">
            <span asp-validation-for="emergencyName" class="text-danger"></span>
        </div>

        <div class="input-container">
            <label asp-for="emergencyNum" class="form-label"></label>
            <input asp-for="emergencyNum" class="form-control">
            <span asp-validation-for="emergencyNum" class="text-danger"></span>
        </div>
        <center><button type="submit" class="submit">Submit</button></center>


    </form>

</body>